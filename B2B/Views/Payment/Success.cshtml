@using Microsoft.AspNetCore.Components;
@using Newtonsoft.Json
@using _3DPayment.Results
@{
    Layout = null;
}
@model VerifyGatewayResult

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>Gateway Confirm - Success</title>
</head>
<body>
    <h3 style="width:100%;display:inline-block;margin:0 auto; text-align:center">Ödemeniz alındı. Lütfen bekleyin...</h3>
    <h3 style="width:100%;display:inline-block;margin:0 auto; text-align:center">Banka Onay Referans @Model.TransactionId </h3>
    <h3 style="width:100%;display:inline-block;margin:0 auto; text-align:center">Banka Onay Referans @Model.ReferenceNumber </h3>
    <h3 style="width:100%;display:inline-block;margin:0 auto; text-align:center">Yeni işlem İçin Sayfayı Yenileyin..... </h3>

<script>
        if (window) {
             window.postMessage(@Html.Raw(JsonConvert.SerializeObject(Model)), "*");
         }

         if (window.parent) {//for iframe
             window.parent.postMessage(@Html.Raw(JsonConvert.SerializeObject(Model)), "*");
         }
  
</script>
</body>
</html>
