@using Microsoft.AspNetCore.Components;
@using Newtonsoft.Json
@using _3DPayment.Results
@{
    Layout = null;
}
@model VerifyGatewayResult

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>Gateway Confirm - Fail</title>
</head>
<body>
    <h3 style="width:100%;display:inline-block;margin:0 auto; text-align:center">Ödemeniz alınamadı. Lütfen bekleyin...</h3>
    <h3 style="width:100%;display:inline-block;margin:0 auto; text-align:center">Banka Hata Mesajı @Model.ErrorCode</h3>
    <h3 style="width:100%;display:inline-block;margin:0 auto; text-align:center">Banka Hata Mesajı @Model.ErrorMessage @Model.ErrMsg</h3>


<script>
    if (window) {
        window.postMessage(@Html.Raw(JsonConvert.SerializeObject(Model)), "*");
    }

    if (window.parent) {//for iframe
        window.parent.postMessage(@Html.Raw(JsonConvert.SerializeObject(Model)), "*");
    }
</script>
</body>
</html>

