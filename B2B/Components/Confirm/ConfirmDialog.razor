@if(ShowDialog){
<div class="modal fade show d-block" id="Confirm" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Onay</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" @onclick="OnConfirmationChanged">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @BodyText
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" @onclick="OnConfirmationChanged">Vazgeç</button>
                <button type="button" class="btn btn-primary" @onclick="OnConfirmationChanged">Tamam</button>
            </div>
        </div>
    </div>
</div>
}
@code {
    private bool ShowDialog { get; set; }
    [Parameter] public string @BodyText { get; set; }
    [Parameter] public  EventCallback OnConfirmationChanged{ get; set; }
    public void Show()
    {
        ShowDialog = !ShowDialog;
    }
}
